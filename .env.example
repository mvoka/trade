# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/Services

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# MinIO / Azure Blob
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_BUCKET=trades-dispatch

# API
API_PORT=3000
API_PREFIX=/api/v1

# Frontend URLs
SMB_APP_URL=http://localhost:3001
PRO_APP_URL=http://localhost:3002
ADMIN_APP_URL=http://localhost:3003
OPERATOR_APP_URL=http://localhost:3004

# Feature Flags (defaults)
DEFAULT_SLA_ACCEPT_MINUTES=5
DEFAULT_SLA_SCHEDULE_HOURS=24

# LLM Configuration (AI Agents)
# Primary: Claude (Anthropic) - Required for AI agents
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL_ID=claude-sonnet-4-20250514

# Fallback: OpenAI GPT-4 - Optional, used when Claude is unavailable
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL_ID=gpt-4-turbo

# LLM Settings
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
LLM_STREAMING_ENABLED=true
LLM_FALLBACK_ENABLED=true
